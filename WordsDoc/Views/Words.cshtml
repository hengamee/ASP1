@model WordsDoc.Models.Words

@{
    ViewData["Title"] = "Words";
}

<h1>Words</h1>
<div class="container">

    <div class="container">

        <div class="form-group col-md-offset-3 col-md-5">

            <h2>Definition of Entired Word</h2>
            <label asp-for="Name"></label>
            <span class="badge">@Model.Word</span>
            <br />

            <label asp-for="Temp"></label>
            <span class="badge">@Model.Definition</span>
            <br />
        </div>
    </div>


    <div class="container">

        <div class="form-group col-md-offset-3 col-md-5">

            <form method="get">
                <button asp-controller="WordsDoc" asp-action="SearchWords" class="btn btn-success">Return</button>
            </form>

        </div>

    </div>
</div>