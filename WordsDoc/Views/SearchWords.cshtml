@model WordsDoc.Models.SearchWords
@{
    ViewData["Title"] = "SearchWords";
}

<h1>SearchWords</h1>

<div class="container">

    <form method="post">

        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <h2>Search the definition of words</h2>
                <label asp-for="Name" style="font-family: Arial"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="WordsDoc" asp-action="WordsDoc" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>

</div>